<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footer"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnkeranjang"
        android:layout_width="50dp"
        android:layout_height="42.75dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/keranjang"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnshop" />

    <ImageButton
        android:id="@+id/btnhome"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/home"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnriwayat"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/riwayat"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btnkeranjang"
        tools:layout_editor_absoluteY="800dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnuser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/user"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btnriwayat"
        tools:layout_editor_absoluteY="800dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnshop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/belanja"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btnhome"
        tools:layout_editor_absoluteY="800dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRiwayat"
        android:layout_width="392dp"
        android:layout_height="766dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>