<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtCartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgCart"
            android:layout_marginStart="12dp"
            android:text="Nama Produk"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCartName"
            android:layout_toEndOf="@id/imgCart"
            android:layout_marginStart="12dp"
            android:text="Rp 0"
            android:textColor="#444" />

        <Button
            android:id="@+id/btnMin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:text="-"
            android:backgroundTint="#C28800"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/btnMin"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/txtQty"
            android:text="+"
            android:backgroundTint="#C28800"
            android:textColor="#fff"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
